<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.25"
        android:weightSum="3"
        android:background="@color/white"
        android:id="@+id/raw_1"
        >

        <androidx.appcompat.widget.AppCompatButton
            style="@style/frameStyle"
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/frame_xo"

            android:onClick="onClick" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn2"
            style="@style/frameStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/frame_xo"


            android:onClick="onClick" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn3"
            style="@style/frameStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/frame_xo"

            android:onClick="onClick" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/raw_1"
        app:layout_constraintHeight_percent="0.25"
        android:weightSum="3"
        android:background="@color/white"
        android:id="@+id/raw_2"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn4"
            style="@style/frameStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/frame_xo"

            android:onClick="onClick" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn5"

            style="@style/frameStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/frame_xo"


            android:onClick="onClick" />


        <androidx.appcompat.widget.AppCompatButton
            style="@style/frameStyle"
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/frame_xo"

            android:onClick="onClick" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/raw_2"
        app:layout_constraintHeight_percent="0.25"
        android:weightSum="3"
        android:background="@color/white"
        android:id="@+id/raw_3"
        >

        <androidx.appcompat.widget.AppCompatButton
            style="@style/frameStyle"
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/frame_xo"

            android:onClick="onClick" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn8"
            style="@style/frameStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/frame_xo"


            android:onClick="onClick" />


        <androidx.appcompat.widget.AppCompatButton
           style="@style/frameStyle"
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/frame_xo"

            android:onClick="onClick" />
    </LinearLayout>
    <TextView
        android:id="@+id/screen1"
        style="@style/frameStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/raw_3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:hint="XO"
        android:textColorHint="@color/white"
        android:textSize="57sp"
        android:gravity="center_vertical"
        android:padding="45dp"
        />

    <Button
        android:id="@+id/newGame"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:backgroundTint="@color/white"
        android:onClick="onClickRest"
        android:text="newgame"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/screen1" />
    <Button
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:backgroundTint="@color/white"
        android:onClick="onClickExit"
        android:text="exit"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newGame"
        />
</androidx.constraintlayout.widget.ConstraintLayout>